<div class="modal-header">
  <h5 class="modal-title"><%= @task&.name%></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="modal-body">
	<p><%= @task&.code%>
	<p><%= @task&.body%></p>
	<p>Start At <%= format_date(@task&.start_date)%></p>
	<p>End At   <%= format_date(@task&.end_date)%></p>
	<%@task.description_files.each_with_index do |description_file, index|%>
		<p><%= link_to 'Description File',task_download_attachment_path(@task.id, index_val:index),class: 'fa fa-download' if description_file.url.present?%><br/></p>
		<%index += 1%>
	<%end%>
	<!-- Comments View Start -->
		<p class= 'button button2'> Comments</p>	
		<% @comments.each do |comment| %>
		  <p><%= comment.body %></p>
		  <%= link_to 'Edit', edit_comment_path(comment), class: 'button button3', data: { modal: true } %>
		  <%= link_to comment, data: { confirm: 'Are you sure?' }, method: :delete, class: 'button button4 text-dark' do %>
        <span aria-hidden="true">&times;</span>
      <% end %>
		<% end %>
	<!-- Comments View End -->
</div>
<!-- Comments Form Start-->
	<div class="form-group">
	  <%= form_for :comment, :url => tasks_path, method: 'post', onsubmit:"submitForm()", html:{id: 'comment_form' } do |f| %>
	    <%= f.text_area :comment, class: "form-control spinner" %></br>
	    <%= f.hidden_field :task_id, :value => @task.id%>
	    <%= f.submit "POST", class: "btn green", id: 'submit_formula' %>
	  <% end %>
	</div>
<!-- Comments Form End -->


